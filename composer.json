    "homepage": "https://github.com/",
    "type": "symfony-bundle",
    "license": "MIT",
    "authors": [
        {
            "name": "Marcos Quesada",
            "email": "marcos.quesadas@gmail.com"
        },
        {
            "name": "Jordi Llonch",
            "email": "llonch.jordi@gmail.com"
        }
    ],
    "require": {
        "php"                      : ">=5.3.0",
        "videlalvaro/php-amqplib"  : "v1.1"
    },
    "require-dev":{
